{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "lib": [
      "ES2020"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": false,
    "strictFunctionTypes": false,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./build"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
